<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0"
    tools:context="com.example.eric.myweather.ChooseCity">

    <RelativeLayout
        android:id="@+id/select_title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="当前城市：北京"
            android:textColor="@android:color/white"
            android:textSize="20.0sp"/>
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal"/>
        <ImageView
            android:layout_width="1.0dp"
            android:layout_height="40.0dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/title_back"
            android:background="#A71717"
            android:gravity="center"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/search_edit"
        android:layout_below="@id/select_title"
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:layout_margin="10.0dp"
        android:hint="搜索全国城市"
        android:drawableLeft="@drawable/magnifying_glass"
        android:drawablePadding="8.0dp"
        android:paddingBottom="8.0dp"
        android:paddingLeft="10.0dp"
        android:paddingRight="30.0dp"
        android:paddingTop="8.0dp"
        android:singleLine="true"
        android:background="@drawable/contact_search_box_edittext_keyword_background"
        android:textColor="#ff000000"
        android:textColorHint="#ffcccccc"
        android:textSize="15.0sp"/>

    <ListView
        android:id="@+id/city_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_edit">

        </ListView>


</RelativeLayout>
